---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/index/Header.astro";
import Footer from "../components/index/Footer.astro";
import ProfileStats from "../components/profile/ProfileStats.astro";
import ProfileForm from "../components/profile/ProfileForm.svelte";
import AuthGuard from "../components/AuthGuard.svelte";
---

<BaseLayout
  title="Mi Perfil - Wordbomb"
  description="Página de perfil del usuario"
>
  <AuthGuard client:load>
    <Header showReturn={true} />

    <main class="min-h-screen px-6 py-8">
      <div class="max-w-7xl mx-auto">
        <!-- Título principal -->
        <div class="mb-8">
          <h1
            class="text-4xl tracking-wider text-center font-bold text-orange-300 font-display-header"
          >
            Mi Perfil
          </h1>
        </div>

        <!-- Contenido principal -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Columna izquierda - Estadísticas -->
          <div class="lg:col-span-1">
            <ProfileStats client:load />
          </div>

          <!-- Columna derecha - Formulario de perfil -->
          <div class="lg:col-span-1">
            <ProfileForm client:load />
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </AuthGuard>
</BaseLayout>
