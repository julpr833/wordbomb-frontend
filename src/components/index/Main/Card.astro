---
import type { ImageMetadata } from "astro";

interface Props {
  class?: string;
  icon: string | ImageMetadata;
  iconAlt: string;
  emoji: string;
}

const { class: className, icon: iconPath, iconAlt: alt, emoji } = Astro.props;
---

<article
  class={"flex flex-col items-center text-white max-w-3xs text-center h-48 text-lg bg-gradient-to-br from-[#5a3425] to-[#512413] w-48 p-4 box-content tracking-tight font-mono text-pretty shadow-md shadow-[#02001e69] border-2 border-[#F56D3C] rounded-md justify-around scrollanim-float-around " +
    className}
>
  <header class="flex align-middle text-6xl">
    {emoji}
  </header>

  <slot />
</article>
