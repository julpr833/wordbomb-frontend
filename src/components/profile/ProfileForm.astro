---
// Datos de ejemplo del usuario
const userProfile = {
  username: "UsuarioEjemplo",
  email: "usuario@ejemplo.com",
  hideName: false
};
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
  <h2 class="text-2xl font-bold text-orange-400 font-display mb-6">Perfil</h2>
  
  <!-- Foto de perfil -->
  <div class="flex justify-center mb-6">
    <div class="w-24 h-24 bg-white rounded-lg flex items-center justify-center border-2 border-gray-300">
      <svg class="w-12 h-12 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
      </svg>
    </div>
  </div>

  <!-- Formulario -->
  <form class="space-y-4">
    <!-- Username -->
    <div>
      <label class="block text-white text-sm font-medium mb-2">Username</label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <input 
          type="text" 
          value={userProfile.username}
          class="w-full pl-10 pr-10 py-3 bg-white rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange-400 focus:border-transparent text-gray-900"
          placeholder="Ingresa tu username"
        />
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Password -->
    <div>
      <label class="block text-white text-sm font-medium mb-2">Contraseña</label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        </div>
        <input 
          type="password" 
          class="w-full pl-10 pr-10 py-3 bg-white rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange-400 focus:border-transparent text-gray-900"
          placeholder="Ingresa tu contraseña"
        />
        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Email -->
    <div>
      <label class="block text-white text-sm font-medium mb-2">Email</label>
      <div class="relative">
        <input 
          type="email" 
          value={userProfile.email}
          class="w-full pl-4 pr-4 py-3 bg-white rounded-lg border border-gray-300 focus:ring-2 focus:ring-orange-400 focus:border-transparent text-gray-900"
          placeholder="Ingresa tu email"
        />
      </div>
    </div>

    <!-- Ocultar nombre -->
    <div class="flex items-center space-x-3">
      <div class="relative">
        <input 
          type="checkbox" 
          id="hideName" 
          checked={userProfile.hideName}
          class="w-5 h-5 text-orange-400 bg-white border-gray-300 rounded focus:ring-orange-400 focus:ring-2"
        />
        <label for="hideName" class="ml-2 text-orange-400 font-medium cursor-pointer">
          Ocultar nombre
        </label>
      </div>
    </div>

    <!-- Botón de guardar -->
    <div class="pt-4">
      <button 
        type="submit"
        class="w-full bg-orange-400 text-white py-3 px-4 rounded-lg font-display text-lg hover:bg-orange-500 transition-colors duration-200 focus:ring-2 focus:ring-orange-400 focus:ring-offset-2 focus:ring-offset-transparent"
      >
        Guardar Cambios
      </button>
    </div>
  </form>
</div>
