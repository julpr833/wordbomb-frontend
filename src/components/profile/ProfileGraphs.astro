---
// Datos de ejemplo para los gráficos
const winrateData = [
  { month: 'Ene', value: 65 },
  { month: 'Feb', value: 72 },
  { month: 'Mar', value: 68 },
  { month: 'Abr', value: 75 },
  { month: 'May', value: 78 },
  { month: 'Jun', value: 82 }
];

const rankingData = [
  { month: 'Ene', position: 25 },
  { month: 'Feb', position: 22 },
  { month: 'Mar', position: 18 },
  { month: 'Abr', position: 16 },
  { month: 'May', position: 14 },
  { month: 'Jun', position: 12 }
];

const maxWinrate = Math.max(...winrateData.map(d => d.value));
const maxRanking = Math.max(...rankingData.map(d => d.position));
---

<div class="space-y-8">
  <!-- Gráfico de Winrate -->
  <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
    <h3 class="text-2xl font-bold text-orange-400 font-display mb-4">Winrate</h3>
    <div class="h-48 relative">
      <svg class="w-full h-full" viewBox="0 0 400 200">
        <!-- Ejes -->
        <line x1="40" y1="180" x2="360" y2="180" stroke="white" stroke-width="2" opacity="0.3"/>
        <line x1="40" y1="20" x2="40" y2="180" stroke="white" stroke-width="2" opacity="0.3"/>
        
        <!-- Líneas de winrate -->
        {winrateData.map((point, index) => {
          const x = 40 + (index * 320 / (winrateData.length - 1));
          const y = 180 - ((point.value / maxWinrate) * 160);
          const nextPoint = winrateData[index + 1];
          
          if (nextPoint) {
            const nextX = 40 + ((index + 1) * 320 / (winrateData.length - 1));
            const nextY = 180 - ((nextPoint.value / maxWinrate) * 160);
            return (
              <line 
                x1={x} 
                y1={y} 
                x2={nextX} 
                y2={nextY} 
                stroke="white" 
                stroke-width="3" 
                opacity="0.8"
              />
            );
          }
          return null;
        })}
        
        <!-- Puntos de datos -->
        {winrateData.map((point, index) => {
          const x = 40 + (index * 320 / (winrateData.length - 1));
          const y = 180 - ((point.value / maxWinrate) * 160);
          return (
            <circle 
              cx={x} 
              cy={y} 
              r="4" 
              fill="white" 
              opacity="0.9"
            />
          );
        })}
        
        <!-- Etiquetas del eje X -->
        {winrateData.map((point, index) => {
          const x = 40 + (index * 320 / (winrateData.length - 1));
          return (
            <text 
              x={x} 
              y="195" 
              text-anchor="middle" 
              fill="white" 
              font-size="12" 
              opacity="0.7"
            >
              {point.month}
            </text>
          );
        })}
      </svg>
    </div>
  </div>

  <!-- Gráfico de Ranking -->
  <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
    <h3 class="text-2xl font-bold text-orange-400 font-display mb-4">Ranking</h3>
    <div class="h-48 relative">
      <svg class="w-full h-full" viewBox="0 0 400 200">
        <!-- Ejes -->
        <line x1="40" y1="180" x2="360" y2="180" stroke="white" stroke-width="2" opacity="0.3"/>
        <line x1="40" y1="20" x2="40" y2="180" stroke="white" stroke-width="2" opacity="0.3"/>
        
        <!-- Barras del ranking -->
        {rankingData.map((point, index) => {
          const x = 50 + (index * 50);
          const height = (point.position / maxRanking) * 140;
          const y = 180 - height;
          const isEven = index % 2 === 0;
          
          return (
            <rect 
              x={x} 
              y={y} 
              width="30" 
              height={height} 
              fill={isEven ? "#6B7280" : "#9CA3AF"} 
              opacity="0.8"
            />
          );
        })}
        
        <!-- Etiquetas del eje X -->
        {rankingData.map((point, index) => {
          const x = 65 + (index * 50);
          return (
            <text 
              x={x} 
              y="195" 
              text-anchor="middle" 
              fill="white" 
              font-size="12" 
              opacity="0.7"
            >
              {point.month}
            </text>
          );
        })}
      </svg>
    </div>
  </div>
</div>
