---
// Datos de ejemplo del usuario
const userStats = {
  wins: 42,
  winrate: 78.5,
  streak: 12,
  ranking: 15
};
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
  <h2 class="text-2xl font-bold text-orange-400 font-display mb-6">Estad√≠sticas</h2>
  
  <div class="space-y-6">
    <!-- Victorias -->
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Victorias</p>
        <p class="text-white text-2xl font-bold">{userStats.wins}</p>
      </div>
    </div>

    <!-- Winrate -->
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
        </svg>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Winrate</p>
        <p class="text-white text-2xl font-bold">{userStats.winrate}%</p>
      </div>
    </div>

    <!-- Racha -->
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-red-500 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
        </svg>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Racha</p>
        <p class="text-white text-2xl font-bold">{userStats.streak}</p>
      </div>
    </div>

    <!-- Ranking -->
    <div class="flex items-center space-x-4">
      <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-700 rounded-full flex items-center justify-center">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Puesto en el ranking</p>
        <p class="text-white text-2xl font-bold">#{userStats.ranking}</p>
      </div>
    </div>
  </div>
</div>
