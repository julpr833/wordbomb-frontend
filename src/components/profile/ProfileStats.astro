---
// Datos de ejemplo del usuario
const userStats = {
  wins: 42,
  winrate: 78.5,
  streak: 12,
  ranking: 15,
};
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
  <h2
    class="text-2xl text-center font-bold text-orange-300 tracking-wide font-display-header mb-6"
  >
    Estadísticas
  </h2>

  <div class="space-y-6">
    <!-- Victorias -->
    <div class="flex items-center space-x-4">
      <div
        class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center"
      >
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          ></path>
        </svg>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Victorias</p>
        <p class="text-white text-2xl font-bold">{userStats.wins}</p>
      </div>
    </div>

    <!-- Winrate -->
    <div class="flex items-center space-x-4">
      <div
        class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center"
      >
        <p class="text-2xl font-semibold text-white">%</p>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">Winrate</p>
        <p class="text-white text-2xl font-bold">{userStats.winrate}%</p>
      </div>
    </div>

    <!-- Ranking -->
    <div class="flex items-center space-x-4">
      <div
        class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-700 rounded-full flex items-center justify-center"
      >
        <p class="text-2xl drop-shadow-amber-950 drop-shadow-xs">🏆</p>
      </div>
      <div>
        <p class="text-orange-400 font-semibold text-lg">
          Puesto en el ranking
        </p>
        <p class="text-white text-2xl font-bold">#{userStats.ranking}</p>
      </div>
    </div>
  </div>
</div>
